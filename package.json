{
  "name": "@radkode/neo",
  "version": "0.10.0",
  "description": "Modern CLI toolkit with intelligent git workflows and configuration management",
  "author": "Jacek Radko",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "neo": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "cli",
    "typescript",
    "commander",
    "radkode",
    "terminal",
    "command-line"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radkode/neo.git"
  },
  "bugs": {
    "url": "https://github.com/radkode/neo/issues"
  },
  "homepage": "https://github.com/radkode/neo#readme",
  "scripts": {
    "build": "tsc && tsc-alias",
    "changeset": "changeset",
    "changeset:status": "changeset status",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm run build && changeset publish",
    "dev": "tsx src/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "link-local": "pnpm run build && pnpm link --global",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "release": "pnpm run build && pnpm run test && changeset publish",
    "start": "node dist/cli.js",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test": "vitest run",
    "unlink-local": "pnpm unlink --global @radkode/neo",
    "version-packages": "changeset version && pnpm install --lockfile-only"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "better-sqlite3": "^12.5.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "execa": "^9.6.1",
    "find-up": "^8.0.0",
    "inquirer": "^13.0.2",
    "nanoid": "^5.1.6",
    "ora": "^9.0.0",
    "which": "^6.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.10.1",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "^3.7.4",
    "prettier-plugin-packagejson": "^2.5.20",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
