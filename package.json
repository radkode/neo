{
  "name": "@radkode/neo",
  "version": "0.1.0",
  "description": "âš¡ Lightning-fast TypeScript CLI framework",
  "author": "Jacek Radko",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "neo": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "cli",
    "typescript",
    "commander",
    "radkode",
    "terminal",
    "command-line"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacekradko/radkode/neo.git"
  },
  "bugs": {
    "url": "https://github.com/jacekradko/radkode/neo/issues"
  },
  "homepage": "https://github.com/jacekradko/radkode/neo#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "format": "prettier --write \"**/*.ts\"",
    "link-local": "pnpm run build && pnpm link --global",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "start": "node dist/cli.js",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test": "vitest run",
    "unlink-local": "pnpm unlink --global @radkode/neo"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "chalk": "5",
    "commander": "^14.0.1",
    "inquirer": "9",
    "ora": "6"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "jiti": "^2.6.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
